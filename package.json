{
  "name": "pokedex",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "bootstrap": "^4.1.1",
    "firebase": "^5.0.4",
    "pokeapi-js-wrapper": "^1.1.1",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.4"
  },
  "devDependencies": {
    "node-sass": "^4.9.0",
    "parallelshell": "^3.0.2"
  },
  "scripts": {
    "start": "parallelshell \"npm run sass:watch\" \"react-scripts start\" ",
    "build": "npm sass:build && react-scripts build",
    "eject": "react-scripts eject",
    "sass:watch": "node-sass -w src/styles/scss -o src/styles/css",
    "sass:build": "node-sass src/styles/scss -o src/styles/css --source-map true",
    "test": "react-scripts test --env=jsdom"
  }
}
